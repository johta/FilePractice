<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FilePractice"
             x:Class="FilePractice.MainPage">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="ファイル生成" Command="{Binding CreateCommand}"/>
            <Button Text="ファイル全消去" Command="{Binding DeleteCommand}"/>
        </StackLayout>
        
        <ListView ItemsSource="{Binding Files}"/>
    </StackLayout>
</ContentPage>
